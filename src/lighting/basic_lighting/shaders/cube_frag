#version 330 core
in vec2 texture_coordinates;
out vec4 frag_color;

uniform sampler2D texture;
uniform vec3 light_color;
uniform vec3 light_position;

vec4 ambient;
const float ambient_strength = 0.1;

void main(){
    ambient = vec4(ambient_strength * light_color, 1.0);
	frag_color = texture(texture, texture_coordinates) * ambient;
}
